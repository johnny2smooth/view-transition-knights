---
import BaseLayout from "../layouts/BaseLayout.astro";
import Character from "../components/CharacterCard.astro";
interface Character {
  character: string;
  skill: string;
  price: number;
  upgrades: string;
}
import { getEntry } from "astro:content";
const { data: characters } = await getEntry("characters", "characters");
---

<BaseLayout title="Choose your Character">
  <div class="flex gap-4 justify-center flex-wrap p-4">
    {
      characters.map((character: Character) => (
        <Character character={character.character} />
      ))
    }
  </div>
</BaseLayout>
