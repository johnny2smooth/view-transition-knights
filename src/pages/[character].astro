---
import BaseLayout from "../layouts/BaseLayout.astro";
export function getStaticPaths() {
  return [
    { params: { character: "knight" } },
    { params: { character: "teddy" } },
    { params: { character: "thug" } },
    { params: { character: "warewolf" } },
  ];
}
const { character } = Astro.params;
---

<BaseLayout title={character}>
  <div class="flex flex-col items-center justify-center">
    <div>
      <img
        src={`${character}.jpeg`}
        alt={`Someone dressed up as a ${character}`}
        width="500"
        transition:name={`${character}`}
      />
      <h2 class="text-4xl">You have chosen wisely...</h2>
    </div>
    <a href="/" class="text-lg" class="flex flex-col items-center"
      >&larr; go home</a
    >
  </div>
</BaseLayout>
