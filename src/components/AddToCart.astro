---
const { price } = Astro.props;
---

<div class="flex flex-col gap-2 pl-12">
  <div class="flex justify-between red-mono">
    <p>size</p>
    <p>size chart</p>
  </div>
  <ul class="flex justify-around red-mono">
    <li class="p-[.2rem] text-sm rounded-md bg-[#f3f3f3]">
      <button class="hover:bg-black hover:text-white py-2 px-6 rounded-md"
        >xs</button
      >
    </li>
    <li class="p-[.2rem] text-sm rounded-md bg-[#f3f3f3]">
      <button class="hover:bg-black hover:text-white py-2 px-6 rounded-md"
        >s</button
      >
    </li>
    <li class="p-[.2rem] text-sm rounded-md bg-[#f3f3f3]">
      <button class="hover:bg-black hover:text-white py-2 px-6 rounded-md"
        >m</button
      >
    </li>
    <li class="p-[.2rem] text-sm rounded-md bg-[#f3f3f3]">
      <button class="hover:bg-black hover:text-white py-2 px-6 rounded-md"
        >l</button
      >
    </li>
    <li class="p-[.2rem] text-sm rounded-md bg-[#f3f3f3]">
      <button class="hover:bg-black hover:text-white py-2 px-6 rounded-md"
        >xl</button
      >
    </li>
  </ul>
  <div
    class="border border-black border-solid flex justify-between items-center red-mono"
  >
    <button
      class="p-4 text-lg hover:bg-black hover:text-white transition-all"
      id="decrement">-</button
    >
    <p class="p-4" id="counter">1</p>
    <button
      class="p-4 text-lg hover:bg-black hover:text-white transition-all"
      id="increment">+</button
    >
  </div>
  <button
    class="flex justify-between bg-[#f3f3f3] hover:bg-[#b1ff39] transition-all rounded-lg red-mono"
  >
    <span class="p-4 text-lg">Add to Cart</span>
    <span class="p-4 text-lg">${price}</span>
  </button>
</div>
<style>
  .red-mono {
    font-family: "Red Hat Mono Variable", sans-serif;
  }
</style>
<script>
  const counterElement = document.getElementById("counter") as HTMLElement;
  const increment = document.getElementById("increment") as HTMLElement;
  const decrement = document.getElementById("decrement") as HTMLElement;

  let counterValue = 1;

  function updateCounterDisplay() {
    counterElement.textContent = counterValue.toString();
  }

  increment.addEventListener("click", () => {
    counterValue++;
    updateCounterDisplay();
  });

  decrement.addEventListener("click", () => {
    if (counterValue > 1) {
      counterValue--;
      updateCounterDisplay();
    }
  });

  updateCounterDisplay();
</script>
